    function openContact(type) {
      switch(type) {
        case 'whatsapp':
          window.open('https://wa.me/5511999999999?text=Ol√°,%20gostaria%20de%20suporte%20sobre%20o%20Crash%20Bot', '_blank');
          break;
        case 'email':
          window.location.href = 'mailto:suporte@elephantbet.com';
          break;
        case 'telegram':
          window.open('https://t.me/ElephantBetSupport', '_blank');
          break;
      }
    }

    // Fechar modal ao clicar fora
    document.getElementById('paymentModal').addEventListener('click', function(e) {
      if (e.target === this) {
        closeModal();
      }
    });
